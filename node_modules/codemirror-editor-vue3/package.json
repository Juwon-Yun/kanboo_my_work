    "dedent": "^0.7.0",
    "diff-match-patch": "^1.0.5",
    "eslint": "^7.23.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-vue": "^7.14.0",
    "less": "^4.1.1",
    "rollup-plugin-cpy": "^2.0.1",
    "rollup-plugin-vue": "^6.0.0",
    "vite": "^2.5.1",
